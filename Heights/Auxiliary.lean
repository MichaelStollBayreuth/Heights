    obtain ‚ü®hf‚ÇÅ, hf‚ÇÇ‚ü© := hc
    refine ‚ü®Filter.map_neBot, ?_‚ü©
    obtain ‚ü®U, hU, V, hV, hUV‚ü© := Filter.inf_eq_bot_iff.mp hn
    obtain ‚ü®Œµ, hŒµ‚ÇÄ, hŒµ‚ü© := Metric.mem_nhds_iff.mp hU
    intro Œ¥ hŒ¥‚ÇÄ
    obtain ‚ü®t, ht‚ÇÅ, ht‚ÇÇ‚ü© := hf‚ÇÇ (Œ¥ * Œµ * Œµ) (by positivity)
    let t' := t ‚à© V
    have h : ‚àÄ x ‚àà t', ‚àÄ y ‚àà t', dist x y < Œ¥ * Œµ * Œµ :=
      fun x hx y hy ‚Ü¶
        ht‚ÇÇ x (Set.mem_of_mem_inter_left hx) y (Set.mem_of_mem_inter_left hy)
    simp_rw [Filter.mem_map]
    refine ‚ü®(¬∑ ‚Åª¬π) ‚Åª¬π' t', by simpa only [Set.inv_preimage, inv_inv] using Filter.inter_mem ht‚ÇÅ hV,
      fun x hx y hy ‚Ü¶ ?_‚ü©
    simp only [Set.inv_preimage, Set.mem_inv] at hx hy
    specialize h x‚Åª¬π hx y‚Åª¬π hy
    rw [dist_eq_norm_sub] at h ‚ä¢
    have hinv {z : F} (hz : z‚Åª¬π ‚àà t') : z‚Åª¬π ‚àâ Metric.ball 0 Œµ :=
      fun H ‚Ü¶ (Set.mem_empty_iff_false _).mp <|
        hUV ‚ñ∏ Set.mem_inter (hŒµ H) (Set.mem_of_mem_inter_right hz)
    have h‚ÇÄ {z : F} (hz : z‚Åª¬π ‚àà t') : z ‚â† 0 := by
      rintro rfl
      exact inv_zero (G‚ÇÄ := F) ‚ñ∏ hinv hz <| Metric.mem_ball_self hŒµ‚ÇÄ
    have HŒµ {z : F} (hz : z‚Åª¬π ‚àà t') : ‚Äñz‚Äñ ‚â§ Œµ‚Åª¬π := by
      refine le_inv_of_le_inv‚ÇÄ hŒµ‚ÇÄ ?_
      simpa only [Metric.mem_ball, dist_zero_right, norm_inv, not_lt] using hinv hz
    have hx‚ÇÄ := h‚ÇÄ hx
    have hy‚ÇÄ := h‚ÇÄ hy
    rw [inv_sub_inv hx‚ÇÄ hy‚ÇÄ, norm_div, norm_mul, norm_sub_rev,
      div_lt_iff‚ÇÄ (by simp [hx‚ÇÄ, hy‚ÇÄ])] at h
    refine h.trans_le ?_
    rw [mul_assoc, mul_assoc, ‚Üê mul_assoc Œµ]
    conv_rhs => rw [‚Üê mul_one Œ¥]
