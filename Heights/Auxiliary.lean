  have : Fintype ‚Üë(f.mulSupport ‚à™ g.mulSupport) := (Set.Finite.union hf hg).fintype
  let s := (f.mulSupport ‚à™ g.mulSupport).toFinset
  have hf‚ÇÅ : f.mulSupport ‚äÜ s := by
